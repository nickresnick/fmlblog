<p id="notice"><%= notice %></p>

<%= simple_form_for topics_path, :method => 'post' do %>
    <%= collection_select :name, @topics, :id, :name, :prompt => "Select Topic" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>

  <tbody>
    <% @topics.each do |topic| %>
        <%= link_to topic.name, topic %>
      <br>
      <br>
        <% topic.posts.each do |post| %>
  <br><br>
          <p><%= post.title %></p>
          <p><%= raw truncate(post.content, :length => 80, :escape => false)%></p>
      <% end %>
    <% end %>
  </tbody>

<br>
<% if logged_in? %>
    <%= link_to 'New Topic', new_topic_path %>
<% end %>
