<p id="notice"><%= notice %></p>

<%= simple_form_for(@topics) do |f| %>
    <%= f.grouped_collection_select :topic_id, @topics.all,:id,:name, include_blank: true %>
    <% end %>

  <tbody>
    <% @topics.each do |topic| %>
        <%= link_to topic.name, topic %>
      <br>
      <br>
        <% topic.posts.each do |post| %>
  <br><br>
          <p><%= post.title %></p>
          <p><%= raw truncate(post.content, :length => 80, :escape => false)%></p>
      <% end %>
    <% end %>
  </tbody>

<br>
<% if logged_in? %>
    <%= link_to 'New Topic', new_topic_path %>
<% end %>
