<div class="row">
<%= form_for([@post, @post.comments.build]) do |f| %>
        <div class="field">
      <%= f.label "Your Name*", :required => true%><br />
      <%= f.text_field :commenter  %>
    </div>
    <div class="field">
      <%= f.label "Comment*", :required => true %><br />
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
<% end %>
</div>