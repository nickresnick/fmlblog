<div class="row">
  <aside class="col-md-4">
<%= form_for([@post, @post.comments.build]) do |f| %>
        <div class="field">
      <%= f.label "Your Name",%><br />
      <%= f.text_field :commenter, :required => true %>
    </div>
    <div class="field">
      <%= f.label "Comment" %><br />
      <%= f.text_area :body, :required => true%>
    </div>
    <div class="actions">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
<% end %>
  </aside>
</div>