<% @posts.each do |post| %>
<div class="row">
  <div class="large-6 columns">
    <div class="row">
      <div class="large-2 columns small-3"><%= image_tag post.picture.url %></div>
      <div class="large-10 columns">
        <p>
          <strong>
            <p><%= link_to post.user.name, post.user %></p>
          </strong>
          <%= raw truncate(post.content, :length => 80, :escape => false)%></p>
        <ul class="inline-list">
          <li><%= link_to post.title, post %></li>
        </ul>
        <h5><%= post.comments.count %> Comments</h5>
    <hr/>
      </div>
    </div>
  </div>
</div>
<% end %>
