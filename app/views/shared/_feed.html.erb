<table>
  <thead>
  <tr>
    <th>Author</th>
    <th>Title</th>
    <th>Post</th>
    <th>Date</th>
    <th>Topic</th>
    <th colspan="5"></th>
    <th rowspan="10"></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
      <tr>
        <td><p><%= link_to post.user.name, post.user %></p></td>
        <td><h2><%= link_to post.title, post %></h2></td>
        <td><p><%= raw truncate(post.content, :length => 100, :escape => false)%></p></td>
        <td><p><%= post.created_at.to_date %></p></td>
        <td><p><%= post.topic.name %></p></td>
        <td><p><%= image_tag post.picture.url, :height => "50%", :width => "50%" %></p></td>
      </tr>
  <% end %>
  </tbody>
</table>
