<table>
<tbody>
<% @posts.each do |post| %>
<div class="row">
  <div class="col-md-6">
        <h3><%= link_to post.title, post %></h3>
    <p>by <%= link_to post.user.name, post.user %> on
      <%= post.created_at.strftime('%B %d, %Y')%> under
      <%= link_to post.topic.name, post.topic %></p>
        <p>
          <%=  truncate(post.content, :length => 30, :escape => false).html_safe %>
        </p>
        <h5><%= post.comments.count %> Comments</h5>
        <h5><%= post.impressionist_count %>
          <% if post.impressionist_count == 1 %>
              <%= "View" %>
          <% else %>
              <%="Views"%>
          <% end %></h5>
  </div>
  <div class="col-md-6">
        <h3><%= image_tag post.picture.url, :height => "60%", :width => "60%" %></h3>
  </div>
</div>
    <hr>
<% end %>
</tbody>
</table>
