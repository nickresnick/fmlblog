<% @posts.each do |post| %>
<div class="row">
  <div class="col-md-6">
        <h3><%= link_to post.title, post %></h3>
    <hr>
    <p>by <%= link_to post.user.name, post.user %> on <%= post.created_at.strftime('%B %d, %Y')%></p>
        <p>
          <%= raw truncate(post.content, :length => 300, :escape => false)%>
        </p>
        <h5><%= post.comments.count %> Comments</h5>
  </div>
  <div class="col-md-6">
        <%= image_tag post.picture.url, :height => "50%", :width => "50%" %>
  </div>
</div>
<% end %>
