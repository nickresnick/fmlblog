<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Content</th>
    <th>Date</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.title %></td>
        <td><%=h truncate(post.content, :length => 80) %></td>
        <td><%= post.created_at.day %></td>
        <td><%= link_to 'Show', post %></td>
      </tr>
  <% end %>
  </tbody>
</table>