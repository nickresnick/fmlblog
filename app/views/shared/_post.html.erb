<table>
  <thead>
  <tr>
    <th><p>Name</p></th>
    <th><p>Title</p></th>
    <th><p>Content</p></th>
    <th><p>Date</p></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
      <tr>
        <td><p><%= post.name %></p></td>
        <td><p><%= post.title %></p></td>
        <textarea><td><%=h truncate(post.content.html_safe, :length => 80) %></td></textarea>
        <td><p><%= post.created_at.to_date %></p></td>
        <td><p><%= link_to 'Show', post %></p></td>
      </tr>
  <% end %>
  </tbody>
</table>