<div class="container-full">
  <div class="container special">
    <div class="jumbotron">
      <h1>Film & Music & Life Blog</h1>

      <h2> Everything from film criticism to life criticism. Guest posts from the roommates. <br>
        Check out the archive <%= link_to "here", posts_path %>.
      </h2>
    </div>
  </div>
</div>

<div class="row">
</div>
<div class="row">
  <div class="col-md-6">
      <%= render 'shared/feed' %>
  </div>
  <div class="container-full">
  <aside class="col-md-6">
    <h3>Most Recent Posts</h3>
    <%= @posts.each do |post| %>
        <div clas="col-md-3">
            <p><%= link_to post.title, post %></p>
        </div>
        <div clas="col-md-3">
          <p><%= post.created_at.to_date %></p>
        </div>
    <% end %>
  </aside>
  </div>
</div>
<div>
  <% if logged_in? %>
    <%= link_to 'New Post', new_post_path %>
  <% end %>
</div>



