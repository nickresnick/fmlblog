<% if logged_in? %>
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
        <section class="micropost_form">
          <%= render 'shared/micropost_form' %>
        </section>
      </aside>
      <div class="col-md-8">
        <h3>Micropost Feed</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>
<% else %>
    <div class = "center jumbotron">

        <h1>Welcome to Nick's Sample App</h1>

        <h2>
    This is the home page for Nick's Sample Application. You may view his LinkedIn profile
    <a href="https://www.linkedin.com/profile/view?id=216783420&trk=nav_responsive_tab_profile">here.</a>
        </h2>

    <%= link_to "Sign Up Bro!", signup_path, class: "btn btn-lg btn-primary" %>
        </div>

<%= link_to image_tag("rails.png", alt: "Rails logo", id: "pic"), 'http://rubyonrails.org/' %>

<% end %>



