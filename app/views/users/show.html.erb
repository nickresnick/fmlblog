<% provide(:title, "Posts by #{@user.name}") %>
<head>
  <%= display_meta_tags %>
</head>
<div class="row container">
      <h1>Posts by <%= @user.name %></h1>
  <div class="col-md-12">
    <% if @user.posts.any? %>
        <h3>Posts (<%= @user.posts.count %>)</h3>
        <hr>
        <ol class="posts">
          <%= render 'shared/feed' %>
        </ol>
    <% end %>
  </div>
  <h4><%= link_to 'Back', url_for(:back) %></h4>
</div>
