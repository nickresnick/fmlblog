<%= simple_form_for(@post) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :title %>
      <%= f.input :content, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'mini'} } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>