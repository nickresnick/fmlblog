<%= form_for @post do |f| %>
    <div>
      <%= f.label :name %>
    </div>
    <div>
      <%= f.label :title %>
    </div>
    <div>
      <%= f.text_field :content  %>
    </div>
    <div>
      <%= f.cktext_area :content, rows: 10 %>
    </div>
    <div>
      <%= f.submit %>
    </div>
<% end %>