<p id="notice"><%= notice %></p>

<%= form_for posts_path, :method => 'get' do %>
    <p>
      <%= collection_select(:search, :topic_id, Topic.all, :id, :name, prompt: "All Topics")   %>
      <%= collection_select(:search, :user_id, User.all, :id, :name, prompt: "All Users")   %>
      <%= submit_tag "Search", :name => nil %>
    </p>
<% end %>

<%= render 'shared/feed' %>
