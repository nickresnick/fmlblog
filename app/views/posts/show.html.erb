<h4><%= link_to 'Back', url_for(:back) %></h4>
<p id="notice"><%= notice %></p>
<div class="row">
  <h1>
    <%= @post.title %>
  </h1>
  <hr>
  <div class="col-md-7">
      <p>
        <%= raw @post.content %>
      </p>
  </div>
  <div class="col-md-5">
    <div class="jumbotron jumbotron-special">
      <h2 id="h2-special">Most Recent Posts</h2>
      <table>
        <thead>
        <td>
          <h5>Post</h5>
        </td>
        <td>
          <h5>Date Posted</h5>
        </td>
        </thead>
        <tbody>
        <% @recent_posts.each do |post| %>
            <tr>
              <b>
                <td><%= link_to post.title, post %>
              </b>
              </td>
              <td><%= post.created_at.to_date %></td>
              <td><%="Views: "%><%= post.impressionist_count %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  <hr>
    <h2>Comments (<%= @post.comments.count %>)</h2>
    <%= render @post.comments %>
    <h2>Add a comment:</h2>
    <%= render "comments/form" %>
  <% if logged_in? %>
      <hr>
      <h2><%= link_to "delete", @post, method: :delete,
                      data: { confirm: "You sure?" } %></h2>
        <h2><%= link_to "edit", @post, edit_post_path(@post) %></h2>
  <% end %>
  </div>
</div>